{% extends "base.html.twig" %}

    {% block body %}
    <div class='container'>
        {% for key, messages in app.session.flashbag.all() %}
            {% for message in messages %}
            <div class="alert alert-{{key}}">
                {{ message|trans({}, 'FOSUserBundle') }}
            </div>
            {% endfor %}
        {% endfor %}
        
        {% block fos_user_content %}
        {% endblock fos_user_content %}
        </div>
    {% endblock %}
